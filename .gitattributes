# Set default behavior to automatically normalize line endings
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files
*.md text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
